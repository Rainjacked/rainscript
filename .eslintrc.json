{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": "semistandard",
    "parserOptions": {
        "sourceType": "module",
        "plugins": [
            "chai-friendly"
        ]
    },
    "rules": {
        "no-unused-expressions": 0,
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}