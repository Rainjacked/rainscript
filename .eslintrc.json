{
    "env": {
        "browser": true,
        "es6": true,
        "mocha": true
    },
    "extends": "semistandard",
    "parserOptions": {
        "sourceType": "module"
    },
    "plugins": [
        "chai-friendly"
    ],
    "rules": {
        "no-unused-expressions": [
            "off"
        ],
        "chai-friendly/no-unused-expressions": [
            "error"
        ],
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ]
    }
}